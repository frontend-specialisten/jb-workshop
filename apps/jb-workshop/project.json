{
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "apps/jb-workshop/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "options": {
        "outputPath": "dist/apps/jb-workshop",
        "index": "apps/jb-workshop/src/index.html",
        "main": "apps/jb-workshop/src/main.ts",
        "polyfills": "apps/jb-workshop/src/polyfills.ts",
        "tsConfig": "apps/jb-workshop/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/jb-workshop/src/favicon.ico",
          "apps/jb-workshop/src/assets",
          "apps/jb-workshop/src/mockServiceWorker.js"
        ],
        "styles": ["apps/jb-workshop/src/styles.scss"],
        "scripts": [],
        "allowedCommonJsDependencies": [
          "msw",
          "@mswjs/cookies",
          "@mswjs/interceptors"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/jb-workshop/src/environments/environment.ts",
              "with": "apps/jb-workshop/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "jb-workshop:build:production"
        },
        "development": {
          "browserTarget": "jb-workshop:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "jb-workshop:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/jb-workshop/**/*.ts",
          "apps/jb-workshop/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/jb-workshop"],
      "options": {
        "jestConfig": "apps/jb-workshop/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
